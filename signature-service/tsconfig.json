{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "resolveJsonModule": true,
    "paths": {
      "*": ["src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "setupFiles": ["dotenv/config"],
  "exclude": ["node_modules", "dist", "tests"]
}